{
  "name": "@glg/support-candidate-app",
  "version": "0.1.0",
  "private": true,
  "homepage": ".",
  "scripts": {
    "build:server": "tsc -p tsconfig.server.json",
    "build:client": "vite build",
    "start": "per-env",
    "start:development": ". ./bin/prepare-docker.sh && docker compose up",
    "dev:client": "vite",
    "dev:server": "nodemon -w 'server/**' --exec 'ts-node --project tsconfig.server.json' server/index.ts",
    "clean:docker": "docker compose down && docker image rm glg-local-dev-support-candidate-app"
  },
  "dependencies": {
    "@emotion/react": "^11.10.6",
    "@emotion/styled": "^11.10.6",
    "@mui/icons-material": "^5.11.11",
    "@mui/material": "^5.11.12",
    "axios": "^1.3.4",
    "bind-decorator": "^1.0.11",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dayjs": "^1.11.7",
    "express": "^4.18.2",
    "mobx": "^6.8.0",
    "mobx-react-lite": "^3.4.3",
    "per-env": "^1.0.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router": "^6.9.0",
    "react-router-dom": "^6.9.0"
  },
  "devDependencies": {
    "@babel/plugin-proposal-decorators": "^7.25.9",
    "@types/cookie-parser": "^1.4.3",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/node": "^18.15.1",
    "@types/react": "^18.0.28",
    "@types/react-dom": "^18.0.11",
    "@types/react-router": "^5.1.20",
    "@types/react-router-dom": "^5.3.3",
    "@vitejs/plugin-react": "^4.2.0",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.0",
    "msw": "^2.7.3",
    "nodemon": "^2.0.21",
    "prettier": "^2.8.4",
    "react-scripts": "^5.0.1",
    "sass": "^1.59.2",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.5",
    "vite": "^5.0.0"
  },
  "eslintConfig": {
    "extends": [
      "react-app"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,tsx,css,md,html}": [
      "prettier --write"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "msw": {
    "workerDirectory": [
      "public"
    ]
  }
}